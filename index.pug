html
  head
    link(rel="stylesheet" href="./css/bootstrap.min.css")
    link(rel="stylesheet" href="./style.css")
    script(src="./events.js")
    script(src="./script.js")
  body
    ul.calendar
      - for (var date=0; date < 31; date++)
        li(class="calendar-item" data-id=(date+1))
          p(class="calendar-day")= date+1
          a(class="calendar-link" href="#" data-toggle="modal" data-target="#exampleModal" data-day=(date+1)) Hello

    .modal.fade#exampleModal(aria-hidden="true")
      .modal-dialog(role="document")
        .modal-content
          .modal-header
            h5.modal-title Date
            button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
          .modal-body
            p.calendar-body
          .modal-footer
            button.btn.btn-secondary(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='button') Save changes

  script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
